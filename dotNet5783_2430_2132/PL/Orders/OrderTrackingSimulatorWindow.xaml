            <Button Content="Start" HorizontalAlignment="Left" Margin="202,13,0,0" Grid.Row="2" VerticalAlignment="Top" Height="55" Width="200" Click="startButton_Click"/>
            <Button Content="Stop" HorizontalAlignment="Left" Margin="560,13,0,0" Grid.Row="2" VerticalAlignment="Top" Height="55" Width="200" Click="stopButton_Click"/>
            <Button Content="Back" HorizontalAlignment="Left" Margin="866,36,0,0" Grid.Row="2" VerticalAlignment="Top" Height="40" Width="100" />




