<Window x:Class="PL.Orders.OrderTrackingSimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="OrderTrackingSimulatorWindow" Height="562.5" Width="1000" Style="{StaticResource backgroundColor}">
    <Window.Resources>
        <local:StatusToColorConverter x:Key="StatusToColor"/>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}" />

    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="OrderListGrid" Grid.Row="1" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}"  RowDetailsVisibilityMode="VisibleWhenSelected" Background="#FFE8E6E6" Opacity="0.6">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ID}" Header="ID" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding CustomerName}" Header="Customer's Name" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn  Binding="{Binding AmountOfItems}" Header="Amount Of Items"  Width="SizeToHeader" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding TotalPrice}" Header="Total Price" Width="SizeToHeader" IsReadOnly="True"/>

                    <DataGridTemplateColumn Header="Status" Width="100" IsReadOnly="True" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  x:Name="StatusGrid" Text="{Binding Status}" Background="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View Order Tracking" BorderThickness="2.5" FontWeight="Normal" FontSize="12" Click="TrackOrderButton_click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="ho" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
